@model OPModel
@{
    ViewData["Title"] = "Módulo de Ordens de Produção";
}

<div class="text-center">
    <h1 class="display-4">Módulo de Ordens de Produção</h1>
    <br/>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#cadastrarOP">Cadastrar nova Ordem de Produção</button>
    </div>
    <br/>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-info btn-lg" role="button" asp-controller="OP" asp-action="Listar">Listar Ordens de Produção</a>
    </div>
</div>

<div class="modal modal-xl center fade" id="cadastrarOP" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content modal-xl">
            <div class="modal-header">
                <h4 class="modal-title">Cadastrar nova Ordem de Produção</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form asp-controller="OP" asp-action="Cadastrar" method="post">
                <div class="modal-body modal-xl modal-dialog-scrollable flex-column">

                    <div class="form-group">
                        <label for="idItem">ID Item</label>
                        <input type="text" asp-for="idOp" class="form-control">
                        @Html.ValidationMessageFor(x => x.idOp)
                    </div>
                    <div class="form-group">
                        <label for="quantidade">Quantidade</label>
                        <input type="text" asp-for="quantidade" class="form-control">
                        @Html.ValidationMessageFor(x => x.quantidade)
                    </div>
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select name="status" id="status">
                            <option value="aberta"> Aberta </option>
                            <option value="execucao"> Em execução </option>
                            <option value="terminada"> Terminada </option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="descricao">Descrição</label>
                        <input type="text" asp-for="descricao" class="form-control">
                        @Html.ValidationMessageFor(x => x.descricao)
                    </div>
                    <div class="form-group">
                        <label for="roteiro">Roteiro</label>
                        <input type="text" asp-for="roteiro" class="form-control">
                        @Html.ValidationMessageFor(x => x.roteiro)
                    </div>
                    <div class="form-group">
                        <label for="dtEmissao">Data de Emissão</label>
                        <input type="datetime" asp-for="dtEmissao" class="form-control">
                        @Html.ValidationMessageFor(x => x.dtEmissao)
                    </div>
                    <div class="form-group">
                        <label for="dtTermino">Data de Termino</label>
                        <input type="datetime" asp-for="dtTermino" class="form-control">
                        @Html.ValidationMessageFor(x => x.dtTermino)
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
                </div>
            </form>
        </div>
    </div>
</div>