@model EstoqueModel
@{
    ViewData["Title"] = "Alterar Estoque";
}

<div class="text-center">

    <h1 class="display-4"> Alterar dados do Estoque</h1>

</div>

<form asp-controller="Estoque" asp-action="Alterar" method="post">

    <input type="hidden" asp- form="id" />

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="nome" class="form-control" placeholder="Digite o nome do Estoque">
        @Html.ValidationMessageFor(x => x.nome)
    </div>
    <div class="form-group">
        <label for="preco">Preço</label>
        <input type="double" asp-for="preco" class="form-control" placeholder="Digite o preço do estoque">
        @Html.ValidationMessageFor(x => x.preco)
    </div>
    <div class="form-group">
        <label for="marca">Marca</label>
        <input type="text" asp-for="marca" class="form-control" >
        @Html.ValidationMessageFor(x => x.marca)
    </div>
    <div class="form-group">
        <label for="descricao">Descricao</label>
        <input type="text" asp-for="descricao" class="form-control" placeholder="Digite a descrição">
        @Html.ValidationMessageFor(x => x.descricao)
    </div>
    <div class="form-group">
        <label for="quantidade">Quantidade</label>
        <input type="int" asp-for="quantidade" class="form-control" placeholder="Digite a quantidade">
        @Html.ValidationMessageFor(x => x.quantidade)
    </div>


    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Estoque" asp-action="Index" role="button">Voltar</a>
</form>


