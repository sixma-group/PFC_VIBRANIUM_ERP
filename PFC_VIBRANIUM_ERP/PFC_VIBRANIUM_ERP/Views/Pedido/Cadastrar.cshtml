@model PedidoModel
@{
    ViewData["Title"] = "Cadastrar Pedido";
}

<div class="text-center">

    <h1 class="display-4"> Cadastrar Pedido</h1>

</div>

<form asp-controller="Pedido" asp-action="Cadastrar" method="post">
    <div class="form-group">
        <label for="tipo">Tipo do pedido</label>
        <select name="tipo" id="tipo">
            <option value="compra">Compra</option>
            <option value="venda">Venda</option>
            @Html.ValidationMessageFor(x => x.tipo)
        </select>
    </div>
    <div class="form-group">
        <label for="produtos">Produtos</label>
        <input type="text" asp-for="produtos" class="form-control" placeholder="Digite o nome do produto">
        @Html.ValidationMessageFor(x => x.produtos)
    </div>
    <div class="form-group">
        <label for="dtPedido">Data do Pedido</label>
        <input type="datetime" asp-for="dtPedido" class="form-control">
        @Html.ValidationMessageFor(x => x.dtPedido)
    </div>
    <div class="form-group">
        <label for="quantidade">Quantidade</label>
        <input type="text" asp-for="quantidade" class="form-control" placeholder="Digite a quantidade">
        @Html.ValidationMessageFor(x => x.quantidade)
    </div>
    <div class="form-group">
        <label for="valor">Valor</label>
        <input type="text" asp-for="valor" class="form-control" placeholder="Digite o valor">
        @Html.ValidationMessageFor(x => x.valor)
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status">
            <option value="aprovado">Aprovado</option>
            <option value="reprovado">Reprovado</option>
            @Html.ValidationMessageFor(x => x.status)
        </select>
    </div>

    <div class="form-group">
        <label for="descricao">Descrição</label>
        <input type="text" asp-for="descricao" class="form-control" placeholder="Digite a descrição do endereço">
        @Html.ValidationMessageFor(x => x.descricao)
    </div>
    <div class="form-group">
        <label for="cep">CEP</label>
        <input type="text" asp-for="cep" class="form-control" placeholder="Digite o CEP">
        @Html.ValidationMessageFor(x => x.cep)
    </div>
    <div class="form-group">
        <label for="numero">Número</label>
        <input type="number" asp-for="numero" class="form-control" placeholder="Digite o número do endereço">
        @Html.ValidationMessageFor(x => x.numero)
    </div>

    <div class="form-group">
        <label for="bairro">Bairro</label>
        <input type="text" asp-for="bairro" class="form-control" placeholder="Digite o bairro">
        @Html.ValidationMessageFor(x => x.bairro)
    </div>
    <div class="form-group">
        <label for="cidade">Cidade</label>
        <input type="text" asp-for="cidade" class="form-control" placeholder="Digite a cidade">
        @Html.ValidationMessageFor(x => x.cidade)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Pedido" asp-action="Index" role="button">Voltar</a>
</form>
