@model List<CARModel>
@{
    ViewData["Title"] = "Listagem de Registros";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Administrativo" asp-action="CadastrarCAR"> Cadastrar novo Registro</a>
    </div>

    <br />

    <h1 class="display-4"> Registros Cadastrados em Sistema</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID Cliente</th>
                <th scope="col">Data Transação</th>
                <th scope="col">Espécie</th>
                <th scope="col">Série</th>
                <th scope="col">Titulo</th>
                <th scope="col">Valor do Título</th>
                <th scope="col">Data de Vencimento</th>
                <th scope="col">Data de Emissão</th>
                <th scope="col">Moeda</th>
                <th scope="col">Parcela</th>
                <th scope="col">Status</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (CARModel acr in Model)
                {
                    <tr>
                        <th scope="row">@acr.idCli</th>
                        <td>@acr.dtTransacao</td>
                        <td>@acr.especie</td>
                        <td>@acr.serie</td>
                        <td>@acr.titulo</td>
                        <td>@acr.valorTitulo</td>
                        <td>@acr.dtVencimento</td>
                        <td>@acr.dtEmissao</td> 
                        <td>@acr.moeda</td>
                        <td>@acr.parcela</td>
                        <td>@acr.status</td>


                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@acr.idCli" asp-controller="Administrativo" asp-action="Alterar">Alterar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@acr.idCli" asp-controller="Administrativo" asp-action="Excluir">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <br /><br />
     <a class="btn btn-secondary btn-block" asp-controller="Administrativo" asp-action="Index" role="button">Voltar</a>

</div>

