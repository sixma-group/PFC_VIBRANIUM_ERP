@model List<EnderecoModel>
@{
    ViewData["Title"] = "Listagem de Endereços";
}

<div class="text-center">
    <h1 class="display-4"> Endereços Cadastrados em Sistema</h1>

    <br/>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Tipo</th>
            <th scope="col">Id</th>
            <th scope="col">Descrição</th>
            <th scope="col">CEP</th>
            <th scope="col">Endereço</th>
            <th scope="col">Número</th>
            <th scope="col">Bairro</th>
            <th scope="col">Cidade</th>
            <th scope="col">Contato</th>
            <th scope="col">Telefone</th>
            <th scope="col">Email</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (EnderecoModel endereco in Model)
            {
                <tr>
                    <th scope="row">@endereco.tipo</th>
                    <td>@endereco.idEnd</td>
                    <td>@endereco.descricao</td>
                    <td>@endereco.cep</td>
                    <td>@endereco.endereco</td>
                    <td>@endereco.numero</td>
                    <td>@endereco.bairro</td>
                    <td>@endereco.cidade</td>
                    <td>@endereco.contato</td>
                    <td>@endereco.telefone</td>
                    <td>@endereco.email</td>

                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" asp-route-id="@endereco.idEnd" asp-controller="Endereco" asp-action="Alterar">Alterar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@endereco.idEnd" asp-controller="Endereco" asp-action="Excluir">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>