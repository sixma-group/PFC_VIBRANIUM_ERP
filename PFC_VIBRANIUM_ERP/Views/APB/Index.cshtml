@model List<ApbModel>
@{
    ViewData["Title"] = "Listagem de Registros";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="APB" asp-action="Cadastrar"> Cadastrar novo Registro</a>
    </div>

    <br />

    <h1 class="display-4"> Registros Cadastrados em Sistema</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Data Transação</th>
                <th scope="col">Espécie</th>
                <th scope="col">Série</th>
                <th scope="col">Titulo</th>
                <th scope="col">Valor</th>
                <th scope="col">Data de Vencimento</th>
                <th scope="col">Data de Emissão</th>
                <th scope="col">Moeda</th>
                <th scope="col">Parcela</th>
                <th scope="col">Status</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ApbModel apb in Model)
                {
            <tr>
                <th scope="row">@apb.idForn</th>
                <td>@apb.dtTransacao</td>
                <td>@apb.especie</td>
                <td>@apb.serie</td>
                <td>@apb.titulo</td>
                <td>@apb.valor</td>
                <td>@apb.dtVencimento</td>
                <td>@apb.dtEmissao</td>
                <td>@apb.moeda</td>
                <td>@apb.parcela</td>
                <td>@apb.status</td>


                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-route-id="@apb.idForn" asp-controller="APB" asp-action="Alterar">Alterar</a>
                        <a role="button" class="btn btn-danger" asp-route-id="@apb.idForn" asp-controller="APB" asp-action="Excluir">Excluir</a>
                    </div>
                </td>
            </tr>
                }
            }
        </tbody>
    </table>
</div>

