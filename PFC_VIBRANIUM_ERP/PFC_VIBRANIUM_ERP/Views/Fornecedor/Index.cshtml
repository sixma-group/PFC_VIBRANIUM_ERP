@model List<FornecedorModel>
@{
    ViewData["Title"] = "Listagem de Fornecedores";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Fornecedor" asp-action="Cadastrar"> Cadastrar novo Fornecedor</a>
    </div>

    <br />

    <h1 class="display-4"> Fornecedores Cadastrados em Sistema</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">País</th>
                <th scope="col">Estado</th>
                <th scope="col">Tipo Pessoa</th>
                <th scope="col">Federal</th>
                <th scope="col">Nome Abreviado</th>

                <th scope="col">CEP</th>
                <th scope="col">Número</th>
                <th scope="col">Bairro</th>
                <th scope="col">Cidade</th>
                <th scope="col">Contato</th>
                <th scope="col">Telefone</th>
                <th scope="col">Email</th>

                <th scope="col">Forma Pagamento</th>
                <th scope="col">Banco</th>
                <th scope="col">Agencia</th>
                <th scope="col">Conta</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (FornecedorModel cliente in Model)
                {
                    <tr>
                        <th scope="row">@cliente.idForn</th>
                        <td>@cliente.nomefornecedor</td>
                        <td>@cliente.pais</td>
                        <td>@cliente.estado</td>
                        <td>@cliente.pessoa</td>
                        <td>@cliente.idfederal</td>
                        <td>@cliente.abrev</td>

                        <td>@cliente.descricao</td>
                        <td>@cliente.cep</td>
                        <td>@cliente.numero</td>
                        <td>@cliente.bairro</td>
                        <td>@cliente.cidade</td>
                        <td>@cliente.contato</td>
                        <td>@cliente.telefone</td>
                        <td>@cliente.email</td>

                        <td>@cliente.pagamento</td>
                        <td>@cliente.banco</td>
                        <td>@cliente.agencia</td>
                        <td>@cliente.conta</td>

                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@cliente.idForn" asp-controller="Fornecedor" asp-action="Alterar">Alterar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@cliente.idForn" asp-controller="Fornecedor" asp-action="Excluir">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

