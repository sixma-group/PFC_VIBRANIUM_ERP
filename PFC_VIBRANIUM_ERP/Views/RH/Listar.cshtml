@model List<FuncionarioModel>
@{
    ViewData["Title"] = "Listagem de Funcionarios";
}

<div class="text-center">
    <h1 class="display-4"> Funcionario Cadastrados em Sistema</h1>

    <br/>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Dt Admissao</th>
            <th scope="col">Dt Termino</th>
            <th scope="col">Dt Desligamento</th>
            <th scope="col">Cargo</th>
            <th scope="col">Salário</th>

            <th scope="col">Forma Pagamento</th>
            <th scope="col">Banco</th>
            <th scope="col">Agencia</th>
            <th scope="col">Conta</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (FuncionarioModel funcionario in Model)
            {
                <tr>
                    <th scope="row">@funcionario.idFunc</th>
                    <td>@funcionario.nomeFuncionario</td>
                    <td>@funcionario.dtAdmissao</td>
                    <td>@funcionario.dtTermino_contrato</td>
                    <td>@funcionario.dtDesligamento</td>
                    <td>@funcionario.cargo</td>
                    <td>@funcionario.salario</td>

                    <td>@funcionario.forma_pagamento</td>
                    <td>@funcionario.banco</td>
                    <td>@funcionario.agencia</td>
                    <td>@funcionario.conta</td>

                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" asp-route-id="@funcionario.idFunc" asp-controller="RH" asp-action="Alterar">Alterar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@funcionario.idFunc" asp-controller="RH" asp-action="Excluir">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    <a class="btn btn-secondary btn-block" asp-controller="RH" asp-action="Index" role="button">Voltar</a>
</div>