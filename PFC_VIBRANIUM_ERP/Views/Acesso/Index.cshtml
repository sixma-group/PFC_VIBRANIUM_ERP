@model List<AcessoModel>
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Acesso" asp-action="Cadastrar"> Cadastrar novo Acesso</a>
    </div>

    <br />

    <h1 class="display-4"> Login Cadastrados em Sistemas</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Senha</th>
                <th scope="col">Nível de Acesso</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (AcessoModel login in Model)
                {
                    <tr>
                        <th scope="row">@login.idUsr</th>
                        <td>@login.nome_user</td>
                        <td>@login.login</td>
                        <td>@login.senha</td>
                        <td>@login.nivel</td>

                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@login.idUsr" asp-controller="Login" asp-action="Alterar">Alterar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@login.idUsr" asp-controller="Login" asp-action="Excluir">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


