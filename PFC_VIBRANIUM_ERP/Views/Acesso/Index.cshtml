@model AcessoModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4"> Módulo de Logins</h1>
    <br/>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#cadastrarUsuario">Cadastrar novo Login</button>
    </div>
    <br/>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-info btn-lg" role="button" asp-controller="Acesso" asp-action="Listar"> Listar Usuários</a>
    </div>
</div>

<div class="modal modal-xl center fade" id="cadastrarUsuario" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content modal-xl">
            <div class="modal-header">
                <h4 class="modal-title">Cadastrar Cliente</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form asp-controller="Acesso" asp-action="Cadastrar" method="post">
                <div class="modal-body modal-xl modal-dialog-scrollable flex-column">
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" asp-for="nome_user" class="form-control" placeholder="Digite o nome">
                        @Html.ValidationMessageFor(x => x.nome_user)
                    </div>
                    <div class="form-group">
                        <label for="login">Login</label>
                        <input type="text" asp-for="login" class="form-control" placeholder="Digite seu usuário">
                        @Html.ValidationMessageFor(x => x.login)
                    </div>
                    <div class="form-group">
                        <label for="senha">Senha</label>
                        <input type="text" asp-for="senha" class="form-control" placeholder="Digite a senha">
                        @Html.ValidationMessageFor(x => x.senha)
                    </div>
                    <div class="form-group">
                        <label for="nivel">Nível de Acesso</label>
                        <select name="nivel" id="nivel">
                            <option value="administrador"> Administrador</option>
                            <option value="operacional"> Operacional</option>
                            <option value="administrativo"> Administrativo</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="funcionario">ID Funcionario</label>
                        <input type="number" asp-for="idFunc" class="form-control" placeholder="Digite o id do Funcionario">
                        @Html.ValidationMessageFor(x => x.idFunc)
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
                </div>
            </form>
        </div>
    </div>
</div>