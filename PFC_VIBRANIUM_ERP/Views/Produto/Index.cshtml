@model ProdutoModel
@{
    ViewData["Title"] = "Módulo de Produto";
}

<div class="text-center">
    <h1 class="display-4">Módulo de Produto</h1>
    <br/>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#cadastrarProduto">Cadastrar novo Produto</button>
    </div>
    <br/>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-info btn-lg" role="button" asp-controller="Produto" asp-action="Listar">Listar Produtos</a>
    </div>
</div>

<div class="modal modal-xl center fade" id="cadastrarProduto" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content modal-xl">
            <div class="modal-header">
                <h4 class="modal-title">Cadastrar novo Produto</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form asp-controller="Produto" asp-action="Cadastrar" method="post">
                <div class="modal-body modal-xl modal-dialog-scrollable flex-column">

                    <div class="form-group">
                        <label for="nome">Nome do Produto</label>
                        <input type="text" asp-for="nome" class="form-control" placeholder="Digite o nome do produto">
                        @Html.ValidationMessageFor(x => x.nome)
                    </div>
                    <div class="form-group">
                        <label for="valor_aquisicao">valor_aquisicao</label>
                        <input type="number" asp-for="valor_aquisicao" class="form-control" placeholder="Digite o preço da aquisiçao">
                        @Html.ValidationMessageFor(x => x.valor_aquisicao)
                    </div>
                    <div class="form-group">
                        <label for="item">Itens Empenhados</label>
                        <input type="text" asp-for="item" class="form-control">
                        @Html.ValidationMessageFor(x => x.item)
                    </div>

                    <div class="form-group">
                        <label for="descricao">Descricao</label>
                        <input type="text" asp-for="descricao" class="form-control" placeholder="Digite a descrição">
                        @Html.ValidationMessageFor(x => x.descricao)
                    </div>
                    <div class="form-group">
                        <label for="preco_saida">Preço</label>
                        <input type="number" asp-for="preco_saida" class="form-control" placeholder="Digite o preço da venda">
                        @Html.ValidationMessageFor(x => x.preco_saida)
                    </div>
                    <div class="form-group">
                        <label for="Id Item">Id Item</label>
                        <input type="number" asp-for="idItem" class="form-control" placeholder="Digite os ids dos Itens">
                        @Html.ValidationMessageFor(x => x.idItem)
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
                </div>
            </form>
        </div>
    </div>
</div>