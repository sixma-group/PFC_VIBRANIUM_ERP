@model List<AcessoModel>
@{
    ViewData["Title"] = "Listar Login";
}

<div class="text-center">

    <h1 class="display-4"> Logins Cadastrados</h1>

    <br/>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Login</th>
            <th scope="col">Senha</th>
            <th scope="col">Nível de Acesso</th>

        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (AcessoModel login in Model)
            {
                <tr>
                    <th scope="row">@login.idUsr</th>
                    <td>@login.nome_user</td>
                    <td>@login.login</td>
                    <td>@login.senha</td>
                    <td>@login.nivel</td>

                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" asp-route-id="@login.idUsr" asp-controller="Login" asp-action="Alterar">Alterar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@login.idUsr" asp-controller="Login" asp-action="Excluir">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>

    <a class="btn btn-secondary btn-block" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
</div>