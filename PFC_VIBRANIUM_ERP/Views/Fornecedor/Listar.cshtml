@model List<FornecedorModel>
@{
    ViewData["Title"] = "Listagem de Fornecedores";
}

<div class="text-center">
    <h1 class="display-4"> Fornecedores Cadastrados em Sistema</h1>

    <br/>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">País</th>
            <th scope="col">Estado</th>
            <th scope="col">Tipo Pessoa</th>
            <th scope="col">Federal</th>
            <th scope="col">Nome Abreviado</th>


            <th scope="col">Forma Pagamento</th>
            <th scope="col">Banco</th>
            <th scope="col">Agencia</th>
            <th scope="col">Conta</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (FornecedorModel fornecedor in Model)
            {
                <tr>
                    <th scope="row">@fornecedor.idForn</th>
                    <td>@fornecedor.razao</td>
                    <td>@fornecedor.pais</td>
                    <td>@fornecedor.estado</td>
                    <td>@fornecedor.pessoa</td>
                    <td>@fornecedor.idfederal</td>
                    <td>@fornecedor.nome_abrev</td>


                    <td>@fornecedor.tipo_pagamento</td>
                    <td>@fornecedor.banco</td>
                    <td>@fornecedor.agencia</td>
                    <td>@fornecedor.conta</td>

                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" asp-route-id="@fornecedor.idForn" asp-controller="Fornecedor" asp-action="Alterar">Alterar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@fornecedor.idForn" asp-controller="Fornecedor" asp-action="Excluir">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    <a class="btn btn-secondary btn-block" asp-controller="Fornecedor" asp-action="Index" role="button">Voltar</a>
</div>