@model List<PedidoModel>
@{
    ViewData["Title"] = "Listagem de Pedidos";
}

<div class="text-center">
    <h1 class="display-4"> Pedidos Cadastrados em Sistema</h1>

    <br/>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tipo Pedido</th>
            <th scope="col">Produtos</th>
            <th scope="col">Data Pedido</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Valor do Pedido</th>
            <th scope="col">Status</th>
            <th scope="col">Id Cliente</th>
            <th scope="col">ID Fornecedor</th>

            <th scope="col">Descrição</th>
            <th scope="col">CEP</th>
            <th scope="col">Endereço</th>
            <th scope="col">Número</th>
            <th scope="col">Bairro</th>
            <th scope="col">Cidade</th>

        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (PedidoModel pedido in Model)
            {
                <tr>
                    <th scope="row">@pedido.idPed</th>
                    <td>@pedido.tipo</td>
                    <td>@pedido.produtos</td>
                    <td>@pedido.dtPedido</td>
                    <td>@pedido.quantidade</td>
                    <td>@pedido.valor</td>
                    <td>@pedido.status</td>
                    <td>@pedido.idCli</td>
                    <td>@pedido.idForn</td>

                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" asp-route-id="@pedido.idPed" asp-controller="Comercial" asp-action="Alterar">Alterar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@pedido.idPed" asp-controller="Comercial" asp-action="Excluir">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    <a class="btn btn-secondary btn-block" asp-controller="Comercial" asp-action="Index" role="button">Voltar</a>
</div>