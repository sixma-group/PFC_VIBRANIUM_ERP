@model List<OPModel>
@{
    ViewData["Title"] = "Listagem de Registros";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="OP" asp-action="CadastrarOP"> Cadastrar novo Registro</a>
    </div>

    <br />

    <h1 class="display-4"> Registros Cadastrados em Sistema</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">ID Item</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Status</th>
                <th scope="col">Descrição</th>
                <th scope="col">Data de Emissão</th>
                <th scope="col">Date de Termino</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (OPModel OP in Model)
                {
                    <tr>
                        <th scope="row">@OP.id</th>
                        <td>@OP.idItem</td>
                        <td>@OP.quantidade</td>
                        <td>@OP.status</td>
                        <td>@OP.descricao</td>
                        <td>@OP.dtEmissao</td>
                        <td>@OP.dtTermino</td>


                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@OP.id" asp-controller="OP" asp-action="Alterar">Alterar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@OP.id" asp-controller="OP" asp-action="Excluir">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <br /><br />

    <a class="btn btn-secondary btn-block" asp-controller="OP" asp-action="Index" role="button">Voltar</a>

</div>

