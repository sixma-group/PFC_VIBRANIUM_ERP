@model ProdutoModel
@{
    ViewData["Title"] = "Confirmar exclusao";
}

<div class="text-center">

    <h3>Deseja excluir o produto (@Model.nome) ?</h3>

</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Produto" asp-action="Index">Cancelar Exclusão </a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Produto" asp-action="ExcluirProduto" asp-route-id="@Model.id">Confirmar Exclusão </a>

