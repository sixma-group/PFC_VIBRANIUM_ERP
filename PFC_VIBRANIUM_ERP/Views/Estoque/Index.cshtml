@model EstoqueModel
@{
    ViewData["Title"] = "Módulo de Estoque";
}

<div class="text-center">
    <h1 class="display-4">Módulo de Estoque</h1>
    <br/>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#cadastrarEstoque">Cadastrar no Estoque</button>
    </div>
    <br/>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-info btn-lg" role="button" asp-controller="Estoque" asp-action="Listar">Listar Estoque</a>
    </div>
</div>

<div class="modal modal-xl center fade" id="cadastrarEstoque" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content modal-xl">
            <div class="modal-header">
                <h4 class="modal-title">Cadastrar no Estoque</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form asp-controller="Estoque" asp-action="Cadastrar" method="post">
                <div class="modal-body modal-xl modal-dialog-scrollable flex-column">

                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" asp-for="nome" class="form-control" placeholder="Digite o nome">
                        @Html.ValidationMessageFor(x => x.nome)
                    </div>
                    <div class="form-group">
                        <label for="preco">Preço</label>
                        <input type="double" asp-for="preco" class="form-control" placeholder="Digite o preço do estoque">
                        @Html.ValidationMessageFor(x => x.preco)
                    </div>
                    <div class="form-group">
                        <label for="marca">Marca</label>
                        <input type="text" asp-for="marca" class="form-control">
                        @Html.ValidationMessageFor(x => x.marca)
                    </div>
                    <div class="form-group">
                        <label for="descricao">Descricao</label>
                        <input type="text" asp-for="descricao" class="form-control" placeholder="Digite a descrição">
                        @Html.ValidationMessageFor(x => x.descricao)
                    </div>
                    <div class="form-group">
                        <label for="quantidade">Quantidade</label>
                        <input type="int" asp-for="quantidade" class="form-control" placeholder="Digite a quantidade">
                        @Html.ValidationMessageFor(x => x.quantidade)
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
                </div>
            </form>
        </div>
    </div>
</div>